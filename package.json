{
  "name": "vkrun",
  "version": "0.21.0",
  "description": "Vkrun is a runtime data validation library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [],
  "author": "Mario Elvio",
  "license": "MIT",
  "engines": {
    "node": "20.11.0"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/jukerah/vkrun#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jukerah/vkrun.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage=false",
    "test:coverage": "jest",
    "test:staged": "jest --passWithNoTests",
    "test:ci": "npm test -- --coverage=true",
    "pre-commit": "lint-staged",
    "changeset": "packages/cli/bin.js",
    "release": "yarn build && changeset publish"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --ext *.ts --fix",
      "npm run test:staged",
      "git add"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
