{
  "exclude": [
    "coverage",
    "./dist",
    "src/**/__tests__",
    "jest.config.ts",
    "examples"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "incremental": true,
  },
  "include": [
    "src"
  ]
}